{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": "./src",
        "declaration": true,
        "esModuleInterop": true,
        "lib": [
            "ES6"
        ],
        "module": "CommonJS",
        "outDir": "./lib",
        "rootDir": "./src",
        "sourceMap": true,
        "strict": true,
        "target": "es6",
        "types": [],
        "useDefineForClassFields": true,
    },
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Recommended",
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "./lib/**/*"
    ],
}